@page "/myorders"
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavManager
@inject Microsoft.JSInterop.IJSRuntime JS

<h2>My Orders</h2>

@if (ordersWithStatus == null)
{
    <p>Loading orders...</p>
}
else if (!ordersWithStatus.Any())
{
    <div class="card">
        <h4>No orders placed</h4>
        <a class="btn btn-warning" href="/pizzas">üçï Order some pizza</a>
    </div>
}
else
{
    <div>
        @foreach (var item in ordersWithStatus)
        {
            <div class="card list-group-item" style="flex-direction: column; align-items: flex-start;">
                <div style="width: 100%; margin-bottom: 12px;">
                    <h5 style="margin: 0 0 8px 0;">@item.Order.CreatedTime.ToLongDateString()</h5>
                    <div style="display: flex; gap: 20px; color: var(--muted);">
                        <div><strong>Items:</strong> @(item.Order.Pizzas?.Count() ?? 0)</div>
                        <div><strong>Total:</strong> ¬£@item.Order.GetTotalPriceString()</div>
                        <div><strong>Status:</strong> <span style="color: var(--accent); font-weight: 600;">@item.StatusText</span></div>
                    </div>
                </div>

                <div style="display: flex; gap: 8px; width: 100%;">
                    <a class="btn btn-warning" href="@($"/myorders/{item.Order.OrderId}")">üìç Track Order</a>
                    <button class="btn btn-outline-danger" @onclick="() => DeleteOrder(item.Order.OrderId)">üóëÔ∏è Delete</button>
                </div>
            </div>
        }
    </div>
}

@code {
    List<OrderWithStatus>? ordersWithStatus;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrders();
    }

    async Task LoadOrders()
    {
        try
        {
            ordersWithStatus = await Http.GetFromJsonAsync<List<OrderWithStatus>>("api/orders");
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine("Failed loading orders: " + ex);
            ordersWithStatus = new List<OrderWithStatus>(); // avoid null UI crash
        }
    }

    async Task DeleteOrder(int orderId)
    {
        var ok = await JS.InvokeAsync<bool>("confirm", $"Delete order {orderId}? This cannot be undone.");
        if (!ok) return;

        var resp = await Http.DeleteAsync($"api/orders/{orderId}");
        if (resp.IsSuccessStatusCode)
        {
            // remove from local list if present to avoid re-fetch (optional)
            ordersWithStatus = ordersWithStatus?.Where(o => o.Order.OrderId != orderId).ToList();
            StateHasChanged();
        }
        else
        {
            var msg = await resp.Content.ReadAsStringAsync();
            await JS.InvokeVoidAsync("alert", $"Delete failed: {resp.StatusCode}\n{msg}");
        }
    }
}
