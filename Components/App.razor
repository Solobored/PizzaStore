@using Microsoft.AspNetCore.Components.Routing

<Router AppAssembly="@typeof(Program).Assembly" Context="routeData">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(PizzaStore.Components.Layout.MainLayout)" />
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(PizzaStore.Components.Layout.MainLayout)">
            <div class="main">
                <h3>Page not found</h3>
                <p>Sorry — we couldn't find that page.</p>
            </div>
        </LayoutView>
    </NotFound>
</Router>
