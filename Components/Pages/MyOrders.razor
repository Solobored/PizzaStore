@page "/myorders"
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavManager
@inject Microsoft.JSInterop.IJSRuntime JS

<h2>My Orders</h2>

@if (ordersWithStatus == null)
{
    <p>Loading orders...</p>
}
else if (!ordersWithStatus.Any())
{
    <h4>No orders placed</h4>
    <a class="btn btn-success" href="/pizzas">Order some pizza</a>
}
else
{
    <div class="list-group">
        @foreach (var item in ordersWithStatus)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h5>@item.Order.CreatedTime.ToLongDateString()</h5>
                    Items: <strong>@(item.Order.Pizzas?.Count() ?? 0)</strong>
                    — Total: <strong>£@item.Order.GetTotalPriceString()</strong>
                </div>

                <div class="d-flex align-items-center">
                    <span class="me-3">Status: <strong>@item.StatusText</strong></span>

                    <!-- Correctly build the href as a single C# expression -->
                    <a class="btn btn-success ms-2" href="@($"/myorders/{item.Order.OrderId}")">Track &gt;</a>

                    <!-- Delete button with confirmation -->
                    <button class="btn btn-outline-danger ms-2" @onclick="() => DeleteOrder(item.Order.OrderId)">
                        Delete
                    </button>
                </div>
            </div>
        }
    </div>
}

@code {
    List<OrderWithStatus>? ordersWithStatus;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrders();
    }

    async Task LoadOrders()
    {
        try
        {
            ordersWithStatus = await Http.GetFromJsonAsync<List<OrderWithStatus>>("api/orders");
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine("Failed loading orders: " + ex);
            ordersWithStatus = new List<OrderWithStatus>(); // avoid null UI crash
        }
    }

    async Task DeleteOrder(int orderId)
    {
        var ok = await JS.InvokeAsync<bool>("confirm", $"Delete order {orderId}? This cannot be undone.");
        if (!ok) return;

        var resp = await Http.DeleteAsync($"api/orders/{orderId}");
        if (resp.IsSuccessStatusCode)
        {
            // remove from local list if present to avoid re-fetch (optional)
            ordersWithStatus = ordersWithStatus?.Where(o => o.Order.OrderId != orderId).ToList();
            StateHasChanged();
        }
        else
        {
            var msg = await resp.Content.ReadAsStringAsync();
            await JS.InvokeVoidAsync("alert", $"Delete failed: {resp.StatusCode}\n{msg}");
        }
    }
}
